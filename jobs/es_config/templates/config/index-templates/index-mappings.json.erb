{
  "template": "<%= p('cf_logging.template_index') %>",
  "order": 102,
  "settings": { 
    "index": {
      "query": {
        "default_field": "@raw"
      }
    }
  },
  "mappings": {
    "_default_": {
      "_all": {
        "enabled": false
      },
      "dynamic_templates": [
        {
          "string_fields": {
            "match": "*",
            "match_mapping_type": "string",
            "mapping": {
              "type": "keyword",
              "index": false,
              "omit_norms": true
            }
          }
        }
      ],
      "properties": {
        "@version": {
          "type": "keyword",
          "index": false
        },
        "@raw": {
          "type": "text",
          "index": true,
          "norms": {
            "enabled": false
          }
        },
        "geoip": {
          "type": "object",
          "dynamic": true,
          "properties": {
            "location": {
              "type": "geo_point"
            }
          }
        }
      }
    }
  }
}

