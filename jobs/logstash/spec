---
name: logstash

templates:
  bin/ctl: bin/ctl
  bin/post-start: bin/post-start
  config/logstash.conf: config/logstash.conf
  config/tls.crt: tls.crt
  config/tls.key: tls.key
  config/env.sh: env.sh
  config/elasticsearch-hosts: config/elasticsearch-hosts
  config/pipelines.yml: config/pipelines.yml
  bin/pre-start: bin/pre-start

packages:
- java
- logstash

consumes:
- name: elasticsearch
  type: elasticsearch
  optional: true

properties:
  logstash.pipelines:
    description: Definition of pipelines.yml, next to logstash.conf
    default:
    - name: dots
      config: input { tcp { port => 5514 } } output { stdout { codec => json_lines } }
  logstash.conf:
    example: |-
      cloud.id: "cf-test:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
      cloud.auth: "elastic:XXXXXXXXXXXXXXXXXXXXXXXXXXX"
    description: logstash.conf
  logstash.tls.certificate:
    description: |-
      TLS certificate that is stored in /var/vcap/jobs/logstash/config/tls.crt

      You can enable tls for tcp input plugin as follows
      input {
        tcp {
          add_field => [ "type", "syslog" ]
          port => "8844"
          ssl_enable => true
          ssl_cert => "/var/vcap/jobs/logstash/tls.crt"
          ssl_key => "/var/vcap/jobs/logstash/tls.key"
          ssl_verify => false
        }
      }
  logstash.tls.private_key:
    description: TLS private key that is stored in /var/vcap/jobs/logstash/config/tls.key
  logstash.env:
    description: A hash of envrioment varibales
  elasticsearch.master_hosts:
    description: The list of elasticsearch master node IPs
    default: []
